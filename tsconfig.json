{
  "extends": "./tsconfig.strict.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./app",
    "incremental": true,
    "sourceMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@common/*": ["src/common/*"],
      "@features/*": ["src/features/*"]
    }
  }
}
